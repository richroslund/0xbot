{
  "name": "0x",
  "private": true,
  "scripts": {
    "clean": "lerna run clean",
    "build": "npx tsc --build packages/tsconfig.projects.json",
    "db": "docker-compose up -d traefik db dbui",
    "watch": "npx tsc --build --watch packages/tsconfig.projects.json",
    "predev": "lerna run clean",
    "dev": "npx nodemon",
    "start:frontend": "lerna run start --scope @0x/frontend",
    "start:api": "lerna run start --scope @0x/api",
    "frontend": "npm-run-all -p watch start:frontend",
    "api": "npm-run-all -p watch start:api",
    "lint": "eslint ./packages --ext .tsx,.ts",
    "lint-fix": "eslint ./packages --ext .js,.ts --fix",
    "start": "lerna run cli",
    "cli": "lerna run cli --",
    "orders": "yarn cli orders",
    "buildAndRun": "lerna run build --scope @0x/frontend && docker-compose build frontend && docker-compose up -d frontend "
  },
  "devDependencies": {
    "nodemon": "^2.0.2",
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@types/jest": "24.0.18",
    "@types/node": "^11.13.1",
    "cross-env": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-react": "^1.1.7",
    "eslint-config-react-app": "^4.0.1",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.3.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "husky": "^2.7.0",
    "jest": "24.9.0",
    "jest-expect-message": "^1.0.2",
    "lerna": "^3.20.2",
    "ncp": "^2.0.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "shelljs": "^0.8.3",
    "ts-jest": "24.0.2",
    "typescript": "^3.7.5",
    "yarn": "^1.16.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
